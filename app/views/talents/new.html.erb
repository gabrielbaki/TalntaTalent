<div class="header">
  <div class="container">
    <%= image_tag("talntalogo.jpg", :alt => "talntalogo feed") %>
    <h1>Talnta New Talent</h1>
  </div>
</div>

<div class="create">
  <div class="container">

    <!-- Your code here -->
    <%= form_for @talent, url: talents_path, :html => { :multipart => true} do |t| %>
  <div class="field">
    Profile Picture :<br><%= t.file_field :image %><br>
    First Name      :<br><%= t.text_field :first_name %><br>
    Last Name       :<br><%= t.text_field :last_name %><br>
    Email           :<br><%= t.email_field :email %><br>
    Password        :<br><%= t.password_field :password %><br>
    About me        :<%= t.text_area :content %><br>
    Date of birth   :<br><%= t.text_field :age %><br>
    Gender          :<br><%= t.text_field :gender %><br>
    Height          :<br><%= t.number_field :height %> cm <br>

  </div>
  <br>
  <div class="actions">
    <%= t.submit "Submit" %>
  </div>
<% end %>

  </div>
</div>
